<script>
	function showOldPassword() {
		var pass = document.getElementById("myOldPassword");
		if (pass.type === "password") {
			pass.type = "text";
		} else {
			pass.type = "password";
		}
	}
	function showNewPassword() {
		var pass = document.getElementById("myNewPassword");
		if (pass.type === "password") {
			pass.type = "text";
		} else {
			pass.type = "password";
		}
	}
	
	<!-- Check if the email is alphanumeric or contains @ symbol or . symbol, clear and re-prompts if not -->
	function validateOldEmail() {
		var email = document.getElementById("myOldEmail").value;
		if (email.match(/[^0-9a-z@.]/i)) {
			alert("Email must be alphanumeric. Please enter a valid email.");
			document.getElementById("myOldEmail").value = "";
		}
	}
	
	<!-- Check if the email is alphanumeric or contains @ symbol or . symbol, clear and re-prompts if not -->
	function validateNewEmail() {
		var email = document.getElementById("myNewEmail").value;
		if (email.match(/[^0-9a-z@.]/i)) {
			alert("Email must be alphanumeric. Please enter a valid email.");
			document.getElementById("myNewEmail").value = "";
		}
	}
	
	<!-- Check if the affiliation is alphanumeric only (space-permitting), clear and re-prompts if not -->
	function validateOldAffiliation() {
		var affiliation = document.getElementById("myOldAffiliation").value;
		if (affiliation.match(/^[0-9a-z](.*[0-9a-z ])?$/igm)) {
			// silently filters out excess (consecutive) whitespace, turning them into one space
			document.getElementById("myOldAffiliation").value = affiliation.replace(/\s\s+/g, ' ');
			affiliation = document.getElementById("myOldAffiliation").value;
		} else {
			alert("Affiliation must be alphanumeric. Please enter a valid affiliation.");
			document.getElementById("myOldAffiliation").value = "";
		}
	}
	
	<!-- Check if the affiliation is alphanumeric only (space-permitting), clear and re-prompts if not -->
	function validateNewAffiliation() {
		var affiliation = document.getElementById("myNewAffiliation").value;
		if (affiliation.match(/^[0-9a-z](.*[0-9a-z ])?$/igm)) {
			// silently filters out excess (consecutive) whitespace, turning them into one space
			document.getElementById("myNewAffiliation").value = affiliation.replace(/\s\s+/g, ' ');
			affiliation = document.getElementById("myNewAffiliation").value;
		} else {
			alert("Affiliation must be alphanumeric. Please enter a valid affiliation.");
			document.getElementById("myNewAffiliation").value = "";
		}
	}
</script>

