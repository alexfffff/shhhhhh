</head>


<body>

<div class="chat-container">

    <!-- Page header start CHANGE THIS TO NAV BAR-->
    <nav class="navbar navbar-expand-lg navbar-light border-bottom" style="background-color:#242526;border-radius:10px;">
        <form action="/home" method="get">
          <button type="submit" class="btn btn-primary" id="menu-toggle">Back to Home</button>
        </form> 
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item active">
              <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Link</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                Dropdown
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <a class="dropdown-item" href="logout">Logout</a>
              </div>
            </li>
          </ul>
        </div>
    </nav>
    <!-- Page header end -->

    <!-- Content wrapper start -->
    <div class="content-wrapper">

        <!-- Row start -->
        <div class="row gutters">

            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">

                <div class="card m-0"style="border-color:#242526">

                    <!-- Row start -->
                    <div class="row no-gutters">
                        <!--LEFT FRIENDS AND ACTIVE CHATS COLUMN-->
                        <div class="col-xl-4 col-lg-4 col-md-4 col-sm-3 col-3">
                            <div class="card m-0" style="background-color:#242526">
                                <div class="d-flex justify-content-center"><label style="color:#E1E1E1;font-size: 20px">Active Friends</label></div>
                                <div class="list-group list-group-flush" id="activeFriends">
                                    <% friends.forEach(friend => { %>
      	                                <button id="<%= friend.username %>" class="btn" style="color:green" onclick="chatThisFriend(this.id)" style="color:#E1E1E1"><%= friend.fullname %></button>
                                    <% }); %>
                                </div>
                                <br>
                                <div class="d-flex justify-content-center"><label style="color:#E1E1E1;font-size: 20px">Chat Invitations</label></div>
                                <div class="list-group list-group-flush" id="chatInvites">
                                </div>
                            </div>
                        </div>
                        <!--RIGHT COLUMN TO ACTUAL CHAT-->
                        <div class="col-xl-8 col-lg-8 col-md-8 col-sm-9 col-9 chat" style="background-color:#393939">
                            <div class="selected-user">
                              <span>
                                <div id="currChatName" class="d-flex justify-content-center" style="color:#E1E1E1;font-size:20px">Start Chatting!</div>
                                
                                <div id="inchat-buttons">

                                </div>

                                <!--remove this-->
                                
                                <!--remove above-->
                              </span>
                              
                              
                            </div>
                            <div class="chat-box">
                              <div class="chat-container"> 
                               
                                <ul id="message-container" style="overflow-y: scroll; height:500px; background-color:#242526">
                                    
                                </ul>
                              
                               
                              </div>
                              <div id="inchat-messagebox">
  
                              </div>
                            </div>

                            <!--also remove-->
                            
                            <!--remove above-->
                        </div>
                    </div>
                    <!-- Row end -->
                </div>

            </div>

        </div>
        <!-- Row end -->

    </div>
    <!-- Content wrapper end -->

</div>


  <!-- Bootstrap core JavaScript -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  
  <!-- Script -->
  <script src='/socket.io/socket.io.js'></script>
  <script>
    
    var username = '<%= username %>';
  	var userFullname = '<%= fullname %>';
  	var socket = io();
	  var currentRoomID = '';
    var currentRoomName = '';
    var currRoomMembers = [];
    var inChat = false;
  	
  	
  	setInterval(function() {
  		socket.emit('get_chat_invites', username)}, 10000);
  		
    setInterval(function() {
    	socket.emit('get_active_friends', username)}, 10000);
		
	  socket.on('welcome', function (data) {
		  currentRoomID = data.id;
		  console.log(data.message);
		  socket.emit('i am client', { message: 'hello!', id: data.id, username: username, userFullname: userFullname});
    });


    socket.on('left_room', function (data) { 
      currRoomMembers = [];
      currentRoomID = '';
      currentRoomName = '';
			console.log("USER LEFT: " + data);
    });
    
    
    socket.on('onlineFriends', function(data){
      var idNames = [];
      data.forEach(friend => {
        idNames.push(friend.username);
        if (document.getElementById(friend.username) === null) {
          console.log('append: ' + $('#friend.username'));
          $('#activeFriends').append(get_online_list_element(friend));
          if (!currRoomMembers.includes(friend.username)) {
            console.log("Skip: " + friend.username);
            $('#addActiveFriends').append(get_potential_group_element(friend));
          }
        }
      });
      console.log(idNames);
      $('#activeFriends').find('button').each(function(index) {
        var currID = $(this).attr("id");
        console.log('user to check:: ' + currID);
        if (!idNames.includes(currID)) {
          console.log('Removing offline user ' + currID);
          $(this).remove();
        }
      });

      $('#addActiveFriends').find('button').each(function(index) {
        var currID = $(this).attr("id");
        console.log('user to check:: ' + currID);
        if (!idNames.includes(currID.substr(currID.indexOf("_")+1))) {
          console.log('Removing offline user from dropdown: ' + currID);
          $(this).remove();
        }
      });
    });
    
    
    
    socket.on('chatInvitations', function(data){
      var chatIDs = [];
      data.forEach(invite => {
        chatIDs.push(invite.chatID);
        if (document.getElementById("inv_" + invite.inviterID + ":" + invite.chatID) === null) {
          $('#chatInvites').append(get_invite_list_element(invite));
        }
      });
      $('#chatInvites').find('button').each(function(index) {
        var currID = $(this).attr("id");
        if (!chatIDs.includes(currID.substr(currID.indexOf(":")+1))) {
          $(this).remove();
        }
      });
    });
      
	  function setUsername() {
		  username = document.getElementById('name').value;
      socket.emit('setUsername', document.getElementById('name').value);
    };

    socket.on('userExists', function(data) {
        document.getElementById('error-container').innerHTML = data;
    });


    function sendMessage() {
        if ($('#message').val().trim() !== '') {
            socket.emit('newChatMsg', {
                message: $('#message').val().trim(),
                sender: username,
                chatID: currentRoomID,
                fullname: userFullname
            });
            $('#message').val('');
            $('#message').focus();
        }
    }
    
    
    function chatThisFriend(userID) {
      currRoomMembers = [];
      currRoomMembers.push(username);
      currRoomMembers.push(userID);
      var newChatID;
      var newChatName;
      if (username < userID) {
        newChatID = username + ':' + userID;
        newChatName = username + ', ' + userID;
      } else {
          newChatID = userID + ':' + username;
          newChatName = username + ', ' + userID;
      }
      currentRoomID = newChatID;
      currentRoomName = newChatName;
      console.log(currentRoomName);
      socket.emit('join_DM', {chatID: newChatID, chatName: newChatName, member: userID});

      //INCHAT ELEMENTS
      if (!inChat) {
        var container = document.getElementById('inchat-buttons');
        var content = "<button id=\"leaveChat\" class=\"btn btn-light\" onclick=\"leaveChat()\">Leave Chat</button>" +
                        "<div class=\"dropdown\">" + 
                            "<button class=\"btn btn-secondary dropdown-toggle\" type=\"button\" id=\"dropdownMenuButton\" data-toggle=\"dropdown\" aria-haspopup=\"true\" aria-expanded=\"false\"> ADD GROUP MEMBERS</button>" +
                                "<div class=\"dropdown-menu\" aria-labelledby=\"dropdownMenuButton\" id=\"addActiveFriends\">";
        <% friends.forEach(friend => { %>
            content += "<a class=\"dropdown-item\" href=\"#\" id=\"group_<%= friend.username %>\" onclick=\"addFriendToGroup(this.id)\"><%= friend.fullname %></a>";
        <% }); %>
        content += "</div></div>";
        container.innerHTML += content;

        var messagebox = document.getElementById('inchat-messagebox');
        var boxcode = "<div class=\"chat-container\">" + 
                        "<div class=\"overflow-auto\">" +
                          "<ul id=\"message-container\" class=\"overflow-auto\">" +
                          "</ul>" +
                        "</div>" +
                        "<div class=\"form-group mt-3 mb-0\">" +
                            "<div><input type=\"text\" id=\"message\" class=\"form-control\" style=\"width:50rem;margin:auto\"" +
                            "placeholder=\"Send a message...\"><button class=\"btn btn-primary\" style=\"margin:auto\" name=\"button\" onclick=\"sendMessage()\">Send</button></div>" +
                        "</div>" +
                      "</div>";
        messagebox.innerHTML += boxcode;
      }
      inChat = true;
    }

    socket.on('newmsg', function(data) {
        if (username === data.sender) {
          $('#message-container').append(get_my_msgs(data.fullname, data.message));
          $('#message-container').animate({
            scrollTop: $('#message-container').get(0).scrollHeight
        }, 0);
        } else {
          $('#message-container').append(get_others_msgs(data.fullname, data.message));
          $('#message-container').animate({
            scrollTop: $('#message-container').get(0).scrollHeight
        }, 0);
        }
        
    });


    function joinThisChat(buttonID) {
     document.getElementById(buttonID).remove();
      var inviterID = buttonID.substr(4, buttonID.indexOf(":")+1);
      currRoomMembers = [];
      currRoomMembers.push(username);
      currRoomMembers.push(inviterID);
      var targetChatID = buttonID.substr(buttonID.indexOf(":")+1);
      currentRoomID = targetChatID;
      socket.emit('accept_invite', {chatID: targetChatID});

      //INCHAT ELEMENTS
      if (!inChat) {
        var container = document.getElementById('inchat-buttons');
        var content = "<button id=\"leaveChat\" class=\"btn btn-light\" onclick=\"leaveChat()\">Leave Chat</button>" +
                        "<div class=\"dropdown\">" + 
                            "<button class=\"btn btn-secondary dropdown-toggle\" type=\"button\" id=\"dropdownMenuButton\" data-toggle=\"dropdown\" aria-haspopup=\"true\" aria-expanded=\"false\"> ADD GROUP MEMBERS</button>" +
                                "<div class=\"dropdown-menu\" aria-labelledby=\"dropdownMenuButton\" id=\"addActiveFriends\">";
        <% friends.forEach(friend => { %>
            content += "<a class=\"dropdown-item\" href=\"#\" id=\"group_<%= friend.username %>\" onclick=\"addFriendToGroup(this.id)\"><%= friend.fullname %></a>";
        <% }); %>
        content += "</div></div>";
        container.innerHTML += content;

        var messagebox = document.getElementById('inchat-messagebox');
        var boxcode = "<div class=\"chat-container\">" + 
                        "<div class=\"overflow-auto\">" +
                          "<ul id=\"message-container\" class=\"overflow-auto\">" +
                          "</ul>" +
                        "</div>" +
                        "<div class=\"form-group mt-3 mb-0\">" +
                            "<div><input type=\"text\" id=\"message\" class=\"form-control\" style=\"width:50rem; margin:auto\"" +
                            "placeholder=\"Send a message...\"><button class=\"btn btn-primary\" style=\"margin:auto\" name=\"button\" onclick=\"sendMessage()\">Send</button></div>" +
                        "</div>" +
                      "</div>";
        messagebox.innerHTML += boxcode;
      }

      inChat = true;
    }


    function addFriendToGroup(userID) {
      currRoomMembers.push(userID.substr(6));
      socket.emit('startGroup', currRoomMembers);
    }



    socket.on('get_messages', function(msg) {
      console.log(msg);
      currentRoomName = msg.chatName;
      console.log(currentRoomName);
    	change_chat_name(currentRoomName);
      $('#message-container').empty();
      if (msg.messages.length === 0) {
        return;
      }
      var messages = msg.messages.Items;
      for (var i=0; i<messages.length; i++) {
        var senderName = messages[i].fullname;
        var message = messages[i].message;
        if (messages[i].username === username) {
          $('#message-container').append(get_my_msgs(senderName, message));
        } else {
          $('#message-container').append(get_others_msgs(senderName, message));
        }
      }
    });
    
    
    

    function get_others_msgs(username, message) {
        return '<div>\
                <div class="card" style="width: 50rem; background-color:#91FFA1;margin:auto">\
                  <div class="card-body">\
                    <h6 class="card-subtitle mb-2 text-muted">'+ username + '</h6>\
                      <p class="card-text">' + message + '</p>\
                  </div>\
                </div>\
              </div><br><br>'
    }


    function get_my_msgs(username, message) {
      return '<div>\
                <div class="card" style="width: 50rem; background-color:#A3DBFF;margin:auto">\
                  <div style="justify-content:flex-end">\
                    <div class="card-body">\
                    <div>\
                    <h6 class="card-subtitle mb-2 text-muted" style="float:right">'+ username + '</h6> <br>\
                      <p class="card-text" style="float:right">' + message + '</p><br>\
                    </div>\
                  </div>\
                  </div>\
                </div>\
              </div><br><br>'
    }

    function change_chat_name(chatroomName) {
      console.log(chatroomName);
      $('#currChatName').text(chatroomName);
    }
    
    function get_online_list_element(friend) {
    console.log("adding firend to active");
      return '<button id="' + friend.username + '" class="btn" onclick="chatThisFriend(this.id)" style="color:green">' + friend.fullname + '</button>';
    }

    function get_potential_group_element(friend) {
      console.log("adding firend to Dropdown");
      return '<a class="dropdown-item" href="#" id="group_' + friend.username + '" onclick="addFriendToGroup(this.id)">' + friend.fullname + '</a>';
    }
    
    
    function get_invite_list_element(invite) {
      if (invite.isGroup) {
        return '<button id="inv_' + invite.inviterID + ":" + invite.chatID + '" class="btn btn-light" onclick="joinThisChat(this.id)">' + invite.inviterName + " is inviting you to a group chat" + '</button>';
      } else {
        return '<button id="inv_' + invite.inviterID + ":" + invite.chatID + '" class="btn btn-light" onclick="joinThisChat(this.id)">' + invite.inviterName + '</button>';
      }
    }


    function leaveChat() {
      document.getElementById('inchat-buttons').innerHTML = "";
      document.getElementById('inchat-messagebox').innerHTML = "";
      inChat = false;
      $('#message-container').empty();
      $('#currChatName').text("Start Chatting!");
    }
    
    
    
  </script>

</body>

</html>