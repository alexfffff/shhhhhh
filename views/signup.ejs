			var interest1 = document.getElementById("myFirstInterest").value;
			var interest2 = document.getElementById("mySecondInterest").value;
			if (interest1 === interest2) {
				alert("You must select at least two unique interests.");
				document.getElementById("myFirstInterest").value = "";
				document.getElementById("mySecondInterest").value = "";
			}
		}
		
		<!-- Check if the username is alphanumeric only, clear and re-prompts if not -->
		function validateUsername() {
			var user = document.getElementById("myNewUsername").value;
			if (user.match(/[^0-9a-z]/i)) {
				alert("Username must be alphanumeric. Please enter a valid username.");
				document.getElementById("myNewUsername").value = "";
			}
		}
		
		<!-- Check if the full name is alphabetical only (space-permitting), clear and re-prompts if not -->
		function validateFullname() {
			var name = document.getElementById("myNewFullName").value;
			if (name.match(/[^a-z ]/i)) {
				alert("Full name must be alphabetical. Please enter a valid full name.");
				document.getElementById("myNewFullName").value = "";
			}
		}
		
		<!-- Check if the email is alphanumeric or contains @ symbol or . symbol, clear and re-prompts if not -->
		function validateEmail() {
			var email = document.getElementById("myNewEmail").value;
			if (email.match(/[^0-9a-z@.]/i)) {
