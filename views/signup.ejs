		<!-- Function to toggle password visibility -->
		function showPassword() {
			var pass = document.getElementById("myNewPassword");
			if (pass.type === "password") {
				pass.type = "text";
			} else {
				pass.type = "password";
			}
		}
		
		<!-- Check if the first two interests are unique, clear and re-prompts if not -->
