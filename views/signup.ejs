	<input type="text" name="myNewBirthday">
	<form action="/createaccount" method="post"> (with all of the information above)
-->

<html lang="en">
	<html lang="en">
		<head>
			<title>Sign Up</title>
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous"/>
			<link rel="stylesheet" type="text/css" href="pennbook.css"/>
			<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
			<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
			<meta charset="utf-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no"/>
		</head>
<body>
	<!-- Sign up page with new username, password, and full name forms -->
  	<div class="login-box">
		<h1><center><b><p style="color:white">Sign Up</p></b></center></h1>
		<form action="/createaccount" method="post">
			<label><font color="white">Create a new username: </font></label><input type="text" name="myNewUsername" required size="20" class="form-control">
			<label><font color="white">Create a new password: </font></label><input type="text" name="myNewPassword" required size="20" class="form-control">
			<label><font color="white">Full name: </font></label><input type="text" name="myNewFullName" required size="20" class="form-control">
			<label><font color="white">Birthday: </font></label><input type="date" id="start" name="myNewBirthday" required size="20" value="2000-07-22" min="1900-01-01" max="2007-12-31" class="form-control">
			<label><font color="white">Enter a new email: </font></label><input type="text" name="myNewEmail" required size="20" class="form-control">
			<label><font color="white">Enter your affiliation: </font></label><input type="text" name="myNewAffiliation" required size="20" class="form-control"><br>
			<!--Select 5 Interests-->
			<font color="white"><label>Select at least 2 interests</label>
			<br>
			<label>Interest 1:  </label>
			<select name="myFirstInterest" required>
				<option value=""></option>
				<option value="saab">Saab</option>
				<option value="opel">Opel</option>
				<option value="audi">Audi</option>
			</select>
			<br>
			<label>Interest 2:  </label><select name="mySecondInterest" required>
				<option value=""></option>
				<option value="saab">Saab</option>
				<option value="opel">Opel</option>
				<option value="audi">Audi</option>
			</select>
			<br>
			<label>Interest 3:  </label><select name="myThirdInterest">
				<option value=""></option>
				<option value="saab">Saab</option>
				<option value="opel">Opel</option>
				<option value="audi">Audi</option>
			</select><br>
			<label>Interest 4:  </label><select name="myFourthInterest">
				<option value=""></option>
				<option value="saab">Saab</option>
				<option value="opel">Opel</option>
				<option value="audi">Audi</option>
			</select><br>
			<label>Interest 5:  </label><select name="myFifthInterest">
				<option value=""></option>
				<option value="saab">Saab</option>
				<option value="opel">Opel</option>
				<option value="audi">Audi</option>
			</select>
			<br>
			</font>
			<input type="submit" value="Submit" class="btn btn-lg btn-primary btn-block">
		</form>
	</div>
	<br><br>
  	<!-- Display error message if it exists -->
	<%if (message != null) { %>
	  	<center><b><p style="color:red"><%= message %></p></b></center>
	<% } %>
 	<br><br><br>
  	<!-- Button with link back to login page -->
	<div class="login-box">
		<center><a class="btn btn-primary btn-lg btn-block" href="http://localhost:8080/" role="button">Back to Login Page</a></center>
	</div>
</body>
</html>